<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author_name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <a class="btn btn-alt" href="/delete-post/<%= post.post_id %>">Delete Post</button>
    <a href="/update-post/<%= post.post_id %>">Edit Post</a>
    <a class="btn" href="/post/<%= post.post_id %>">View Post</a>
  </div>
</article>
